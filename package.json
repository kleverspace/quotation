{
  "name": "quotation",
  "version": "0.1.0",
  "description": "Informative website on the quotation of the world's major currencies.",
  "scripts": {
    "start": "concurrently \"npm run watch\" \"npm run serve\"",
    "serve": "npm run build && browser-sync --no-notify start -s --serveStatic 'dist' --files 'dist'",
    "build": "npm run build:styles && npm run build:images && npm run build:html && npm run build:scripts && npm run build:vendors",
    "watch": "concurrently \"npm run watch:styles\" \"npm run watch:images\" \"npm run watch:html\" \"npm run watch:scripts\" \"npm run watch:vendors\"",
    "build:styles": "node-sass src/styles/main.scss dist/styles/style.css",
    "build:scripts": "babel \"src/scripts\" --out-dir \"dist/scripts\" --copy-files --presets es2015",
    "build:vendors": "cpx \"src/vendors/**/*\" \"dist/vendors/\"",
    "build:images": "cpx \"src/images/**/*\" \"dist/images\"",
    "build:html": "cpx \"src/**/*.html\" \"dist/\"",
    "watch:styles": "node-sass src/styles/main.scss dist/styles/style.css -w",
    "watch:scripts": "babel \"src/scripts\" -w --out-dir \"dist/scripts\" --copy-files --presets es2015 ",
    "watch:images": "cpx \"src/images/**/*\" \"dist/images\" -w",
    "watch:html": "cpx \"src/**/*.html\" \"dist/\" -w",
    "watch:vendors": "cpx \"src/vendors/**/*\" \"dist/vendors/\" -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kleverspace/quotation"
  },
  "author": "Quotation Team",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.3.13",
    "browser-sync": "^2.2.1",
    "browserify": "^14.5.0",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "node-sass": "^4.5.3"
  },
  "dependencies": {
    "flexboxgrid-sass": "^8.0.5",
    "modernizr": "^3.5.0",
    "sass-css3-mixins": "^0.1.0"
  }
}
